@model Core.Dtos.UserDto

@{
    ViewData["Title"] = "Register";
}

<h2>New User</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Email</label>
                <input placeholder="Your Email" asp-for="Email" type="email" required class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <partial name="_User" />

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input placeholder="Your Password" asp-for="Password" required type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Password Confirm</label>
                <input placeholder="Repit Your Password" asp-for="PasswordConfirm" required type="password" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>


            <div class="form-group">
                <a asp-action="Index" class="btn btn-light" >
                    <i class="bi bi-arrow-left-circle-fill"></i> Back
                </a>
                <button type="submit" value="Create" class="btn btn-primary">
                    <i class="bi bi-save2-fill"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>
<partial name="_Alert" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}