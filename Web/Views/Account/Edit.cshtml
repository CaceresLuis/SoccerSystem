@model Core.Dtos.UserDto

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit User</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Email" />

            <partial name="_User" />

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input placeholder="Your Address" asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PictureFile" class="control-label"></label>
                <input asp-for="PictureFile" class="form-control" type="file" />
                <span asp-validation-for="PictureFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a href="javascript: history.go(-1)" class="btn btn-light">
                    <i class="bi bi-arrow-left-circle-fill"></i> Back
                </a>
                <button type="submit" value="Update" class="btn btn-primary">
                    <i class="bi bi-save2-fill"></i> Update
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}