@model Core.Modules.UserModule.LoginWeb.LoginWebQuery
@{
    ViewData["Title"] = "Login";
}

<div class="col-lg-12">

    <div class="col-md-4">

    </div>
    <div class="col-md-4 text-center login">
        <h2>Login</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input asp-for="UserName" class="form-control" placeholder="Email" />
                <span asp-validation-for="UserName" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="password" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
                </div>
                <span asp-validation-for="RememberMe" class="text-warning"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Login" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt"></i> Login
                </button>
                <a asp-action="Register" class="btn btn-default">
                    <i class="fas fa-user"></i> Register New User
                </a>
                <a asp-controller="Account" asp-action="RecoverPasswordMVC" class="btn btn-link">Forgot your password?</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">

    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}