@model Web.ViewModel.GroupViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Group to tournament: @Model.Group.Tournament.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Group.Tournament.Id" />
            <input type="hidden" name="isNew" id="isNew" value="True" />

            <partial name="_Group" />

            <div class="form-group">
                <a asp-controller="Tournament" asp-action="Details" asp-route-id="@Model.Group.Tournament.Id" class="btn btn-default">
                    <i class="bi bi-arrow-left-circle-fill"></i> Back
                </a>
                <button type="submit" value="Create" class="btn btn-primary">
                    <i class="bi bi-save2-fill"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

<partial name="_Alert" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
