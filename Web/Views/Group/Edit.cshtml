@model Web.ViewModel.GroupViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

@*<h4>Group to tournament: @Model.Group.Tournament.Name</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tournament.Id" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="isNew" id="isNew" value="False" />

            <partial name="_Group" />

            <div class="form-group">
                <a href="javascript: history.go(-1)" class="btn btn-default">
                    <i class="bi bi-arrow-left-circle-fill"></i> Back
                </a>
                <button type="submit" value="Save" class="btn btn-primary">
                    <i class="bi bi-save2-fill"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

<partial name="_Alert" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
