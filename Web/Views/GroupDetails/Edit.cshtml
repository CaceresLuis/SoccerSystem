@model Core.ModelResponse.One.OneGroupDetailsResponse

@{
    ViewData["Title"] = "Create";
}

<h4>Group team: @Model.GroupDetail.Group.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GroupDetail.Group.Id" />
            <input type="hidden" asp-for="GroupDetail.Id" />
            <input type="hidden" asp-for="GroupDetail.Team.Id" />
            <input type="hidden" name="isNew" id="isNew" value="False" />

            <div class="form-group">
                <label class="control-label"> Matches Played</label>
                <input asp-for="GroupDetail.MatchesPlayed" readonly min="0" max="999" class="form-control" />
                <span asp-validation-for="GroupDetail.MatchesPlayed" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Matches Won</label>
                <input asp-for="GroupDetail.MatchesWon" min="0" max="999" class="form-control" />
                <span asp-validation-for="GroupDetail.MatchesWon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Matches Tied</label>
                <input asp-for="GroupDetail.MatchesTied" min="0" max="999" class="form-control" />
                <span asp-validation-for="GroupDetail.MatchesTied" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Matches Lost</label>
                <input asp-for="GroupDetail.MatchesLost" min="0" max="999" class="form-control" />
                <span asp-validation-for="GroupDetail.MatchesLost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Goals For</label>
                <input asp-for="GroupDetail.GoalsFor" min="0" max="999" class="form-control" />
                <span asp-validation-for="GroupDetail.GoalsFor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Goals Against</label>
                <input asp-for="GroupDetail.GoalsAgainst" min="0" max="999" class="form-control" />
                <span asp-validation-for="GroupDetail.GoalsAgainst" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-controller="Groups" asp-action="DetailsGroup" asp-route-id="@Model.GroupDetail.Group.Id" class="btn btn-default">
                    <i class="bi bi-arrow-left-circle-fill"></i> Back
                </a>
                <button type="submit" value="Create" class="btn btn-primary">
                    <i class="bi bi-save2-fill"></i> Create
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div>
            <h2>@Model.GroupDetail.Team.Name</h2>
        </div>
        @if (!string.IsNullOrEmpty(Model.GroupDetail.Team.LogoPath))
        {
            <img src="@Model.GroupDetail.Team.LogoPath" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
        }
        else
        {
            <img src="~/images/noimage.jpeg" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
