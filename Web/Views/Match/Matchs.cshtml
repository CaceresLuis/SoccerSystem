@model Core.Dtos.GroupMatchsDto

@{
    ViewData["Title"] = "Create";
    var data = Model.Matches;
}

<h2>Add</h2>

<h4>Match to group: @Model.Name</h4>

<div>
    <br />
    @if (Model.Matches.Count != 0)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Matches</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" id="MyTable">
                            <thead>
                                <tr>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Local
                                    </th>
                                    <th>
                                        Goals Local
                                    </th>
                                    <th>
                                        Goals Visitor
                                    </th>
                                    <th>
                                        Visitor
                                    </th>
                                    <th>
                                        Is Closed
                                    </th>
                                    <th width="150px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Matches.OrderBy(m => m.Date))
                                {
                                    <tr>
                                        <td>
                                            @item.DateLocal.ToString("MMM dd, yyyy") @item.Hour.ToString("HH:mm")
                                        </td>
                                        <td>
                                            <h4>@item.Local.Name</h4>
                                            @if (!string.IsNullOrEmpty(item.Local.LogoPath))
                                            {
                                                <img src="@Url.Content(item.Local.LogoPath)" alt="Image" style="width:50px;height:50px;max-width: 100%; height: auto;" />
                                            }
                                            else
                                            {
                                                <img src="~/images/noimage.jpeg" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GoalsLocal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GoalsVisitor)
                                        </td>
                                        <td>
                                            <h4>@item.Visitor.Name</h4>
                                            @if (!string.IsNullOrEmpty(item.Visitor.LogoPath))
                                            {
                                                <img src="@Url.Content(item.Visitor.LogoPath)" alt="Image" style="width:50px;height:50px;max-width: 100%; height: auto;" />
                                            }
                                            else
                                            {
                                                <img src="~/images/noimage.jpeg" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsClosed)
                                        </td>
                                        <td>
                                            @if (item.IsClosed == true)
                                            {
                                                <a asp-controller="Match" asp-action="EditMatch" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                                            }
                                            else
                                            {
                                                <a asp-controller="Match" asp-action="CloseMatch" asp-route-id="@item.Id" class="btn btn-success"><i class="bi bi-hand-index-thumb-fill"></i></a>
                                            }
                                            <button data-id="@item.Id" class="btn btn-danger deleteItemMath" data-toggle="modal" data-target="#deleteDialog"><i class="bi bi-trash-fill"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#MyTable').DataTable();

        $('.deleteItemMath').click((e) => {
            item_to_delete = e.currentTarget.dataset.id;
        });

        $("#btnYesDelete").click(function () {
            window.location.href = '/Match/DeleteMatch/' + item_to_delete;
        });
    });
</script>
