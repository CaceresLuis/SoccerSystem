@model IEnumerable<Infrastructure.Models.TeamEntity>

@{ 
    ViewData["Title"] = "Teams";
    var num = 1; }
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="glyphicon glyphicon-ok-circle"></i> Create New Team
                    </a>
                    || Teams
                </p>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LogoPath)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @num
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.LogoPath))
                                    {
                                        <img src="@item.LogoPath" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                                    }
                                </td>
                                <td>
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog">
                                        <i class="glyphicon glyphicon-trash"></i> Delete
                                    </button>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">
                                        <i class="glyphicon glyphicon-trash"></i> Edit
                                    </a>
                                </td>
                            </tr>
                            num++;
                         }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/Team/Delete/' + item_to_delete;
            });
        });
    </script>
}

