@model Core.Modules.TournamentModule.Add.AddTournamentCommand

<div class="form-group">
    <label asp-for="Tournament.Name" class="control-label"></label>
    <input asp-for="Tournament.Name" class="form-control" />
    <span asp-validation-for="Tournament.Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Tournament.LogoFile" class="control-label"></label>
    <input asp-for="Tournament.LogoFile" class="form-control" type="file" />
    <span asp-validation-for="Tournament.LogoFile" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Tournament.StartDate" class="control-label"></label>
    <input asp-for="Tournament.StartDate" type="date" class="form-control" />
    <span asp-validation-for="Tournament.StartDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Tournament.EndDate" class="control-label"></label>
    <input asp-for="Tournament.EndDate" type="date" class="form-control" />
    <span asp-validation-for="Tournament.EndDate" class="text-danger"></span>
</div>

<div class="form-group">
    <div class="checkbox">
        <label>
            <input asp-for="Tournament.IsActive" /> @Html.DisplayNameFor(model => model.Tournament.IsActive)
        </label>
    </div>
</div>
